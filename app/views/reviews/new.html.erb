<style>
body {
  color: black;
  list-style: none;
}
ul {
  list-style: none;
}
h1 {
  color: purple;
}

</style>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <h1>Post a review</h1>


      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>

      <%= f.submit "add a review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
